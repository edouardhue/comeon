<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level [%thread]: %message%n</pattern>
    </encoder>
  </appender>

  <logger name="comeon"  level="INFO"/>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>